{
    "name": "Fix Width",
    "description": "Fix the width of pages that span the whole browser. Makes websites far more readable.",
    "version": "0.1.0",
    "manifest_version": 3,
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_popup": "index.html"
    },
    "icons": {
        "16": "/icons/16.png",
        "32": "/icons/32.png",
        "48": "/icons/48.png",
        "128": "/icons/128.png",
        "512": "/icons/512.png",
        "1024": "/icons/1024.png"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }]
  }